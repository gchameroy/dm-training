{% extends 'base.html.twig' %}

{% block nav_bar %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Add Question</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('home') }}">Home</a>
                </li>
                <li>
                    <a href="{{ path('pool_question') }}">Pool Questions List</a>
                </li>
                <li>
                    <a href="{{ path('pool_question_view', { 'id' : poolQuestion.id }) }}">{{ poolQuestion.title }}</a>
                </li>
                <li class="active">
                    <strong>Add Question</strong>
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h4>Add Question</h4>
                    &nbsp;
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Title</label>
                            <div class="col-lg-10">
                                {{ form_widget(form.title, {'attr' : {'class' : 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Image</label>
                            <div class="col-lg-10">
                                {{ form_widget(form.image, {'attr' : {'class' : 'form-control'} }) }}
                                {{ form_errors(form.image) }}
                            </div>
                        </div>
                        {% for answer in form.answers %}
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Answer NÂ°{{ loop.index }}</label>
                                <div class="col-sm-10">
                                    <div class="input-group m-b">
                                        <span class="input-group-addon">
                                            {{ form_widget(answer.isTrue) }}
                                        </span>
                                        {{ form_widget(answer.title, {'attr' : {'class' : 'form-control'} }) }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        <div class="form-group">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-10">
                                <button class="btn btn-sm btn-primary" type="submit">
                                    <strong>Add Question</strong>
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
